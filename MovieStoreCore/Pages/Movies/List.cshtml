@page
@model MovieStoreCore.Pages.Movies.ListModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <br />
    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" asp-for="SearchTerm" />
                <span class="input-group-btn">
                    <button class="btn btn-default">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </form>
    <table class="table">
        @foreach (var item in Model.moviesData)
        {
        <tr>
            <td>@item.MovieName</td>
            <td>@item.Country</td>
            <td>@item.Genres</td>
            <td>
                <a class="btn btn-lg" asp-page="./Details" asp-route-movieId="@item.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
            </td>
        </tr> 
        }

    </table>
</body>
</html>
